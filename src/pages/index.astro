---

<Layout
	title="Andriyani - Full Stack Software Developer"
	description="Andriyani is a highly skilled software development professional bringing more than 5 years in software design, development and integration"
>
	<main class="pt-10">
		<section class="mb-10 flex flex-col-reverse sm:flex-row sm:items-center sm:justify-between">
			<div class="mt-8 sm:mt-0">
				<p>Hi, my name is</p>
				<h1 class="font-bold text-6xl text-primary-500 my-4">
					Andriyani
				</h1>
				<p>{about}</p>
			</div>
			<div class="flex-shrink-0">
				<img
					src="/andriy.jpg"
					alt="Image of the Author"
					width={160}
					height={160}
					class="rounded-full overflow-hidden"
					loading="eager"
					decoding="async"
				/>
			</div>
		</section>
		<section class="flex flex-col lg:flex-row">
			<h2 class="w-52 font-semibold text-xl">EXPERIENCE</h2>
			<div class="w-full">
				{experiences.map(experience => (
					<div class="mb-10">
						<div class="flex justify-between items-center">
							<h3 class="text-lg font-semibold text-primary-500">{experience.role}</h3>
							<p class="text-sm whitespace-nowrap text-gray-600">
								{`${experience.from} - ${experience.to}`}
							</p>
						</div>
						<p>{experience.company}</p>
						<ul class="list-disc ml-4">
							{experience.responsibilities.map(responsibility => (
								<li class="text-sm list-item">{responsibility}</li>
							))}
						</ul>
					</div>
				))}
			</div>
		</section>
		<section class="flex flex-col lg:flex-row">
			<h2 class="w-52 font-semibold text-xl">SKILLS</h2>
			<div class="w-full">
				<ul>
					{skillCategories.map(skillCategory => (
						<li class="mb-4">
							<p class="text-primary-500 font-semibold text-lg mb-2">{skillCategory.name}</p>
							<ul class="grid grid-cols-2 md:grid-cols-3 gap-4">
								{skillCategory.skills.map(skill => (
									<li class="flex items-center gap-4">
										<span class="w-11 h-11 flex items-center justify-center shadow-lg shadow-zinc-800/5 rounded-full ring-1 ring-zinc-900/5 bg-zinc-100 ">
											<Icon name={skill.icon} class="w-6 h-6" />
										</span>
										<p class="text-gray-600">{skill.name}</p>
									</li>
								))}
							</ul>
						</li>
					))}
				</ul>
			</div>
		</section>
	</main>
</Layout>
